#!/usr/bin/env bash
# shellcheck disable=SC2034
set -eou pipefail

# Build and runtime app vars
export APP_NAME='ccc'
export APP_DOMAIN='poppet.io'

export DOCKER_REGISTRY="registry.poppet.io"
export DOCKER_IMAGE_HADOLINT="$DOCKER_REGISTRY/dockerhub/hadolint/hadolint:latest"
export DOCKER_IMAGE_SHELLCHECK="$DOCKER_REGISTRY/dockerhub/koalaman/shellcheck:stable"

COMMON_RUN_ARGS=(
  --rm
  --interactive
)
COMMON_RUN_UTIL_ARGS=(
  --tty
  --mount "type=bind,src=${PWD},dst=${PWD}"
  --mount "type=volume,src=ccc-tools-venv,dst=${PWD}/.venv"
  --workdir "${PWD}"
)

# Helper arrays
COMMON_BUILD_ARGS=(
  .
)
